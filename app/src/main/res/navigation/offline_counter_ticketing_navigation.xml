<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/offline_counter_ticketing_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/secretPasswordFragment"
        android:name="com.jatri.offlinecounterticketing.ui.configuration.SecretPasswordFragment"
        android:label="fragment_secret_password"/>
    <fragment
        android:id="@+id/configurationFragment"
        android:name="com.jatri.offlinecounterticketing.ui.configuration.ConfigurationFragment"
        android:label="ConfigurationFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.jatri.offlinecounterticketing.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.jatri.offlinecounterticketing.home.HomeFragment"
        android:label="HomeFragment" />
</navigation>